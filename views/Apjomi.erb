<div class="row">
    <div class="text-center">
        <h3>Valūtu apjomi</h3>
    </div>
</div>
<div class="row padtop text-center">
    <table class="center">
        <thead>
            <tr>
                <th class="text-center">Valūta</th>
                <th class="text-center">Apjoms</th>
            </tr>
        </thead>
        <tbody>
            <% currencies.each do |c| %><tr>
                <td><%= h c.Apzīmējums %></td>
                <td><%= h c.amount.Apjoms %></td>
            </tr><% end %>
        </tbody>
    </table>
</div>
<div class="row padtop">
    <div class="text-center">
        <h3>Veikt valūtas maiņu</h3>
    </div>
</div>
<div class="row text-center padtop">
    <form method="POST">
        <% if iserror == 1 or iserror == 2 %><div class="row">
            <div class="medium-4 columns"></div>
            <div class="small-4 columns small-centered">
                <% if iserror == 1 %><small class="alert-box warning radius text-center bold">Kļūda!</small>
                <% else %><div class="alert-box success radius text-center bold">Valūta apmainīta!</div><% end %>
            </div>
            <div class="medium-4 columns"></div>
        </div><% end %>
        <div class="row">
            <div class="small-5 columns">
                <label for="fromcurrency" class="right inline">Valūta (no)</label>
            </div>
            <div class="small-3 columns">
                <select id="fromcurrency" name="fromcurrency">
                    <% currencies.each do |c| %><option value="<%= h c.Apzīmējums %>"><%= h c.Apzīmējums %></option><% end %>
                </select>
            </div>
            <div class="medium-4 columns"></div>
        </div>
        <div class="row">
            <div class="small-5 columns">
                <label for="tocurrency" class="right inline">Valūta (uz)</label>
            </div>
            <div class="small-3 columns">
                <select id="tocurrency" name="tocurrency">
                    <% currencies.each do |c| %><option value="<%= h c.Apzīmējums %>"><%= h c.Apzīmējums %></option><% end %>
                </select>
            </div>
            <div class="medium-4 columns"></div>
        </div>
        <div class="row">
            <div class="small-5 columns">
                <label for="amount" class="right inline">Apjoms</label>
            </div>
            <div class="small-3 columns">
                <input type="text" id="amount" name="amount" placeholder="Apjoms" required="required" />
            </div>
            <div class="medium-4 columns"></div>
        </div>
        <input type="submit" name="change" value="Veikt apmaiņu" class="button" />
    </form>
</div>
