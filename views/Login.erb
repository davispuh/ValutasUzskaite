<div class="row">
    <div class="text-center">
        <h1>Valūtas uzskaites sistēma</h1>
        <h4>Lūdzu autorizējaties</h4>
    </div>
</div>
<div class="row padtop">
    <div class="text-center">
        <form method="POST">
            <% if iserror == 1 or iserror == 2 %><div class="row">
                <div class="medium-4 columns"></div>
                <div class="small-4 columns small-centered">
                    <% if iserror == 1 %><small class="error bold">Nepareizs lietotājvārds vai parole!</small>
                    <% else %><small class="error bold">Jūsu konts ir bloķets!</small><% end %>
                </div>
                <div class="medium-4 columns"></div>
            </div><% end %>
            <div class="row">
                <div class="small-5 columns">
                    <label for="username" class="right inline">Lietotājvārds</label>
                </div>
                <div class="small-3 columns">
                    <input type="text" id="username" name="username" placeholder="Lietotājvārds" required="required" />
                </div>
                <div class="medium-4 columns"></div>
            </div>
            <div class="row">
                <div class="small-5 columns">
                    <label for="password" class="right inline">Parole</label>
                </div>
                <div class="small-3 columns">
                    <input type="password" id="password" name="password" placeholder="Parole" required="required" />
                </div>
                <div class="medium-4 columns"></div>
            </div>
            <input type="submit" value="Autorizēties" class="button" />
        </form>
    </div>
</div>
